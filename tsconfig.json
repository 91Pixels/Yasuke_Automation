{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",  
    "moduleResolution": "NodeNext",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strict": true,
    "rootDir": ".",
    "outDir": "./dist",
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@support/*": ["./support/*"],
      "@steps/*": ["./step-definitions/*"]
    }
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "dist", "test-results"]
}
